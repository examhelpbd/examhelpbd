    .journey-step-description {
      font-size: 0.875rem;
      color: var(--gray-600);
      line-height: 1.5;
    }
    
    /* Testimonials Section - Fixed shadows */
    .testimonials {
      background: var(--white);
      position: relative;
      overflow: visible; /* Changed from hidden to visible */
      padding-bottom: 6rem; /* Added extra padding for shadow */
    }
    
    .testimonials::before {
      content: '"';
      position: absolute;
      top: -50px;
      left: 50px;
      font-size: 200px;
      color: var(--green-soft);
      font-family: serif;
      line-height: 1;
    }
    
